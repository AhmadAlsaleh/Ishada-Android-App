<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LauncherActivity"
    android:orientation="vertical"
    android:gravity="center">

    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cardElevation="@dimen/card_elevation"
        app:cardCornerRadius="@dimen/card_elevation"
        android:layout_marginBottom="@dimen/task_iv_xy">

        <ImageView
            android:layout_width="@dimen/main_logo"
            android:layout_height="@dimen/main_logo"
            android:src="@drawable/ishada_logo"
            android:layout_gravity="center" />

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/task_iv_xy"
        android:paddingRight="@dimen/loading_point_margin"
        android:paddingLeft="@dimen/loading_point_margin"
        android:background="@drawable/loading_unselect_point">

        <RelativeLayout
            android:id="@+id/loadRL1"
            android:layout_width="@dimen/loading_point_xy"
            android:layout_height="@dimen/loading_point_xy"
            android:layout_margin="@dimen/loading_point_margin"
            android:background="@drawable/loading_select_point"/>

        <RelativeLayout
            android:id="@+id/loadRL2"
            android:layout_width="@dimen/loading_point_xy"
            android:layout_height="@dimen/loading_point_xy"
            android:layout_margin="@dimen/loading_point_margin"
            android:background="@drawable/loading_unselect_point"/>

        <RelativeLayout
            android:id="@+id/loadRL3"
            android:layout_width="@dimen/loading_point_xy"
            android:layout_height="@dimen/loading_point_xy"
            android:layout_margin="@dimen/loading_point_margin"
            android:background="@drawable/loading_unselect_point"/>

        <RelativeLayout
            android:id="@+id/loadRL4"
            android:layout_width="@dimen/loading_point_xy"
            android:layout_height="@dimen/loading_point_xy"
            android:layout_margin="@dimen/loading_point_margin"
            android:background="@drawable/loading_unselect_point"/>

    </LinearLayout>

</LinearLayout>