<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/list_task_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/meetingItemNumTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:padding="@dimen/list_task_margin"
            android:background="@drawable/button_secondary_background"
            android:layout_marginEnd="@dimen/fab_margin"
            android:textSize="@dimen/preview_date"/>

        <EditText
            android:id="@+id/meetingItemSubjectET"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="Subject"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/list_item_title"
            android:padding="@dimen/list_task_margin"
            android:background="@drawable/button_secondary_background" />

        <ImageView
            android:id="@+id/meetingItemRemoveIV"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent"
            android:padding="@dimen/list_task_margin"
            app:srcCompat="@drawable/ic_remove_circle"/>

    </LinearLayout>

    <EditText
        android:id="@+id/meetingItemExtraET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Extra"
        android:layout_marginTop="@dimen/loading_point_margin"
        android:layout_marginBottom="@dimen/loading_point_margin"
        android:textColor="@color/primary_text"
        android:textSize="@dimen/list_item_title"
        android:padding="@dimen/list_task_margin"
        android:background="@drawable/button_secondary_background" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_x"
        android:background="@color/divider"/>

</LinearLayout>