<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.crazy_iter.ishada.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_margin="@dimen/task_iv_xy">

        <android.support.v7.widget.CardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="@dimen/task_iv_xy"
            app:cardElevation="@dimen/card_elevation"
            app:cardCornerRadius="@dimen/card_elevation">

            <ImageView
                android:layout_width="@dimen/main_logo"
                android:layout_height="@dimen/main_logo"
                android:src="@drawable/ishada_logo"
                android:layout_gravity="center" />

        </android.support.v7.widget.CardView>

        <EditText
            android:id="@+id/signInUsernameET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fab_margin"
            android:hint="username"
            android:inputType="textPersonName"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/list_item_title"
            android:padding="@dimen/list_task_margin"
            android:background="@drawable/button_secondary_background"/>

        <EditText
            android:id="@+id/signInPasswordET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fab_margin"
            android:hint="password"
            android:inputType="textPassword"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/list_item_title"
            android:padding="@dimen/list_task_margin"
            android:background="@drawable/button_secondary_background"/>

        <Button
            android:id="@+id/signInBTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_primary_background"
            android:text="Sign in"
            android:textColor="@android:color/white"
            android:textSize="@dimen/list_item_title"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/signInFL"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
